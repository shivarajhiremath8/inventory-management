{
  "appId": "com.inventorymanagement.app",
  "productName": "Inventory Management",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "backend/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "extraResources": [
    {
      "from": "backend",
      "to": "backend"
    }
  ]
}
